import "../styles/global.css";
---
<!doctype html>
<html lang="es_PE">
	<head>
		<meta charset="UTF-8" />
    	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Nasca Trails Travel Agency | Authentic experiences in Nazca</title>
		<meta name="description" content="Discover the secrets of Nazca with our personalized tours. Fly over the Nazca Lines, explore Cahuachi, Chauchilla, geoglyphs, and aqueducts, and experience an unforgettable adventure." />
		<meta name="keywords" content="Nazca, Nazca Lines, Cahuachi, Chauchilla, geoglyphs, aqueducts, tour, travel agency, Peru, archaeology, flights, Nazca Trails Travel Agency" />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Nasca Trails Travel Agency" />
		<link rel="canonical" href="https://nascatrails.com/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Nasca Trails Travel Agency" />
		<meta property="og:description" content="Exclusive Nazca tours: Nazca Lines, Cahuachi, Chauchilla Cemetery, and more. Book today with Nazca Trails!" />
		<meta property="og:url" content="https://nascatrails.com/" />
		<meta property="og:image" content="https://nascatrails.com/og-image.jpg" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Nasca Trails Travel Agency" />
		<meta name="twitter:description" content="Enjoy a unique experience in Nazca with our specialized tours. Book quickly and easily." />
		<meta name="twitter:image" content="https://nascatrails.com/og-image.jpg" />
		<script type="application/ld+json">
			{
			"@context": "https://schema.org",
			"@type": "TravelAgency",
			"name": "Nasca Trails Travel Agency",
			"url": "https://nascatrails.com/",
			"logo": "https://nascatrails.com/logo.svg",
			"image": "https://nascatrails.com/og-image.jpg",
			"description": "Nasca Trails offers authentic Nasca tours: flights over the lines, archaeological visits, and more.",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Nasca",
				"addressRegion": "Ica",
				"addressCountry": "PE"
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+51-992-846-591",
				"contactType": "customer service",
				"areaServed": "PE",
				"availableLanguage": ["Spanish", "English"]
			}
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
